<html lang="en"><head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hacktiv Shirt Store</title>
    <style>
      .custom-jumbotron {
        background-color: #ff7575 !important;
        border-radius: 0px !important;
      }
      .form-container {
        max-width: 500px;
        margin: auto;
      }
    </style>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand text-danger" href="/">ðŸ‘•Hacktiv Shirt Store</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
  
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link text-danger" href="/">List</a>
          </li>
        </ul>
      </div>
    </nav>
    <h1 class="jumbotron text-center text-light p-5 custom-jumbotron">
      Add new shirt
    </h1>
    <div class="form-container pb-5 mb-2">
      
      <form action="/shirts/add" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input name="name" type="text" class="form-control" id="name" placeholder="e.g: Kaos Polo Garis">
        </div>
        <div class="form-group">
          <label for="type">Type</label>
          <select name="type" class="form-control" id="type">
            <option disabled="" selected="">--Select Type--</option>
            <option>Casual</option>
            <option>Dress</option>
            <option>T-Shirt</option>
            <option>Polo</option>
          </select>
        </div>
        <div class="form-group">
          <label for="size">Size</label>
          <select name="size" class="form-control" id="size">
            <option disabled="" selected="">--Select Size--</option>
            <option>S</option>
            <option>M</option>
            <option>L</option>
            <option>XL</option>
          </select>
        </div>
        <div class="form-group">
          <label for="stock">Stock</label>
          <input name="stock" type="text" class="form-control" id="stock" placeholder="e.g: 12">
          <small id="emailHelp" class="form-text text-muted">Fill stock amount from 0 to 100</small>
        </div>
  
        <div class="form-group">
          <label for="size">Tag</label>
          <select name="tagId" class="form-control" id="tagId">
            <option disabled="" selected="">--Select tag--</option>
           
            <option value="1">Men</option>
            
            <option value="2">Women</option>
            
            <option value="3">Kid</option>
            
            <option value="4">Genderless</option>
            
          </select>
        </div>
  
  
        <button type="submit" class="btn btn-danger">Add Shirt</button>
      </form>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
  
  </body></html>